<UserControl x:Class="CcontrolsZaxx.Buttons.DataSearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CcontrolsZaxx.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300" Background="White">
    <UserControl.Resources>
        <Image x:Key="RefImg" Source="/Resources/Refresh.png"/>
    </UserControl.Resources>
    
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Button Content="{StaticResource RefImg}" />
        </Grid>
        <Border Grid.Column="1" Margin="5,0,5,0" BorderBrush="Black" BorderThickness="2">
            <TextBox/>
        </Border>
        <Grid Grid.Column="2">
            <Image Source="/Resources/Search.png" />
        </Grid>
    </Grid>
</UserControl>
